{
  "name": "png-to-jpg",
  "displayName": "png to jpg",
  "description": "Convert png file to jpg in specific place",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
      "onCommand:png-to-jpg.convert"
  ],
  "main": "./dist/extension.js",
  "configurations": {},
  "png-to-jpg.images": "images",
  "png-to-jpg.contents": "articles",
  "contributes": {
    "commands": [
      {
        "command": "png-to-jpg.convert",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "png to jpg Configuration",
      "properties": {
        "png-to-jpg.images": {
          "type": "string",
          "default": "sample_images",
          "description": "Path to images folder"
        },
        "png-to-jpg.contents": {
          "type": "string",
          "default": "sample_contents",
          "description": "Path to contents folder"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sharp": "^0.34.1"
  }
}
